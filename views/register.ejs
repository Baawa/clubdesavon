<% if (typeof assetpath === 'undefined') { assetpath = '' } %>
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />

	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
  <meta name="viewport" content="width=device-width" />

  <!-- Bootstrap core CSS -->
  <link href="<%= assetpath %>assets/css/bootstrap.min.css" rel="stylesheet" />

	<!-- Core Bootstrap -->
	<script src="<%= assetpath %>assets/js/bootstrap.min.js" type="text/javascript"></script>

  <!-- main.js -->
  <script src="<%= assetpath %>assets/js/main.js" type="text/javascript"></script>

  <!-- jQuery -->
  <script src="<%= assetpath %>assets/js/jquery.min.js" type="text/javascript"></script>
	<style>
		.center {
				margin: auto;

				width: 60%;
				border: 3px solid #4f7080;
				padding: 10px;
		}
		.center2 {
				margin: 30px;
				text-align: center;
				width: 60%;
				border: 3px solid #4f7080;
				padding: 10px;
		}
		.center3 {
			margin: 10px;
			width: 30%;
			margin-left: auto;
			margin-right: auto;
		}
	</style>
</head>
<body>
	<div class="container">
		<h1 class="center3">Register New User</h1>
	  <form id="registerForm" action="javascript:void(0);">
	    <div class="center form-group">
	        <input
	              type="name"
	              name="name"
	              required="true"
	              placeholder="Name.."
	              class="form-control">
	    </div>
	    <div class="center form-group">
	        <input
	              type="password"
	              name="password"
	              required="true"
	              placeholder="Password.."
	              class="form-control">
	    </div>
		<div class="center3">
	    <button class="ml-4 mr-4 center3 btn btn-outline-primary" onclick="postForm('#registerForm', '/register', '/login')">Register</button>
			<a href="/login" class="btn btn-light" >Cancel</a>
		</div>
	  </form>
	</div>
</body>
</html>
